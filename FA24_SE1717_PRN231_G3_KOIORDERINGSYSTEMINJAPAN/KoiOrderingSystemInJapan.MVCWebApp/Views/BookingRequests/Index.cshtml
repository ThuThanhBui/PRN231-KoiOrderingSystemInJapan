@model IEnumerable<KoiOrderingSystemInJapan.Data.Models.BookingRequest>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Customer Email</th>
            <th scope="col">Travel Name</th>
            <th scope="col">Quantity Service</th>
            <th scope="col">NumberOfPerson</th>
            <th scope="col">Status</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody class="tblBookingRequests">
    </tbody>
</table>

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            getData();
        })

        function getData() {
            $.ajax({
                url: "https://localhost:7298/api/BookingRequests",
                type:"Get",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    var html = "";
                    $.each(result.data, function (key, item) {
                        html += '<tr>';
                        html += '<th scope="row">' + key + '</th>'
                        html += '<td scope="row">' + item.customer.email +'</td>'
                        html += '<td scope="row">' + item.travel.name +'</td>'
                        html += '<td scope="row">' + item.quantityService + '</td>'
                        html += '<td scope="row">' + item.numberOfPerson + '</td>'
                        html += '<td scope="row">' + getStatusText(item.status) + '</td>'
                        html += '<td scope="row">' + '<a href="/BookingRequests/Edit/'+ item.id + '">Edit</a>' + '</td>'
                        html += '<td scope="row">' + '<a href="/BookingRequests/Details/'+ item.id + '">Details</a>' + '</td>'
                        html += '<td scope="row">' + '<a href="/BookingRequests/Delete/'+ item.id + '">Delete</a>' + '</td>'
                    })
                    $('.tblBookingRequests').html(html);
                },
                error: function (xhr, error) {
                    alert(xhr.statusText);
                }
            })
        }
        function getStatusText(status) {
            switch (status) {
                case 0:
                    return "Pending";
                case 1:
                    return "Approved";
                case 2:
                    return "Rejected";
                default:
                    return "Unknown";
            }
        }
    </script>
}
